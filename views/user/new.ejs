<%- include('../partials/header.ejs') %>

<h3><u>Sign Up for your Free account!</u></h3>

</br>

<form action = '/user' method = 'POST'>
<label for="firstName" >First Name: </label>
<input type="text" id="firstName" name="firstName" class="fixed-width" required>

</br>

<label for="lastName" >Last Name: </label>
<input type="text" id="lastName" name="lastName" class="fixed-width" required>

</br>

<label for="email" >Email: </label>
<input type="text" id="email" name="email" class="fixed-width" required>

</br>

<label for="password" >Password: </label>
<input type="password" id="password" name="password" class="fixed-width" minlength="10" maxlength="64" required>

</br>

<button>Register</button>
</form>

